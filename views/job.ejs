<h2><%= job ? "Edit Job" : "Add Job" %></h2>
<form method="POST" action="<%= job ? `/jobs/update/${job._id}` : '/jobs' %>">
  <input type="hidden" name="_csrf" value="<%= _csrf %>">
  <div>
    <label for="company">Company:</label>
    <input type="text" id="company" name="company" value="<%= job ? job.company : '' %>" required>
  </div>
  <div>
    <label for="position">Position:</label>
    <input type="text" id="position" name="position" value="<%= job ? job.position : '' %>" required>
  </div>
  <div>
    <label for="status">Status:</label>
    <select id="status" name="status" required>
      <option value="applied" <%= job && job.status === 'applied' ? 'selected' : '' %>>Applied</option>
      <option value="interviewing" <%= job && job.status === 'interviewing' ? 'selected' : '' %>>Interviewing</option>
      <option value="offered" <%= job && job.status === 'offered' ? 'selected' : '' %>>Offered</option>
      <option value="rejected" <%= job && job.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
    </select>
  </div>
  <button type="submit"><%= job ? "Update" : "Add" %> Job</button>
</form>
